.post-container{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: #fff;
  padding-bottom: 5rpx;
}

.post-author-date{
  margin: 10rpx 0rpx 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align:middle; 
} 

.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title{
  margin-left: 10rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.post-image{
  width: 100%;
  height: 420rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.post-content{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1px;
  line-height: 40rpx;
}

.post-like{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  flex-direction: row;
  font-size: 26rpx;
  line-height: 32rpx;

}

.post-like-image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.post-like-font{
  
  margin-right: 30rpx;
  vertical-align: middle;
}

