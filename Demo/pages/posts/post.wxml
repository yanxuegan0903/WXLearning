<import src='post-item/post-item-template.wxml' />


<view>
  <swiper indicator-dots="true" autoplay="true" interval = "2000">
    <swiper-item>
      <image src='/images/lbj_0.jpeg' ></image>
    </swiper-item>
    <swiper-item class='swiperItem_1'>
      <image src='/images/lbj_1.jpeg'></image>
    </swiper-item>
    <swiper-item class='swiperItem_2'>
      <image src='/images/lbj_2.jpeg'></image>
    </swiper-item>
  </swiper>
  
  <block wx:key="" wx:for="{{post_key}}" wx:for-item="item" wx:for-index="index" >
    <!-- template -->
    <view catchtap='onPostTap' data-postId="{{item.postid}}">
      <template is='postItem' data="{{...item}}" />
    </view>
  </block>

</view>